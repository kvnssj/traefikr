FROM node:20

WORKDIR /frontend

# Only copy package files for dependency installation
COPY --chmod=0755 ./entrypoint.sh /entrypoint.sh

# Expose the dev server port (will use environment variable)
EXPOSE 3000

# The source code will be mounted as a volume
# Run the development server with polling for file changes (works better in Docker)
ENTRYPOINT ["/entrypoint.sh"]